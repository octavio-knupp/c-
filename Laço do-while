int contador = 1;
do
{
     Console.WriteLine("Número:" + contador);
    contador++;
}
while (contador <= 12);
-----------------------------------------------
int numero;
int soma = 0;
do
{
    Console.Write("Digite um número (0 para sair):");
    numero = Convert.ToInt32(Console.ReadLine());    
    soma += numero;
    Console.WriteLine("Soma é: " +soma);
}
while (numero != -0);
